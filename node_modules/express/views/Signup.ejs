<div class="modal fade" id="signUpModal" role="dialog" >
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="signUpModal">Sign Up</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">


        <form>

          <div class="form-group">

            <div class="row">
              <div class="col">
                  <input type="text" class="form-control" placeholder="First name">
              </div>

              <div class="col">
                <input type="text" class="form-control" placeholder="Last name">
              </div>

            </div>

          </div>

          <hr>

          <div class="form-group">
            <input type="text" class="form-control" placeholder="Username">
          </div>

          <hr>

          <div class="form-group">
            <input type="email" class="form-control" placeholder="example@email.com">
            <br>
            <input type="email" class="form-control" placeholder="Confirm e-mail">
          </div>

          <hr>

          <div class="form-group">
            <input type="password" class="form-control" placeholder="Password">
            <br>
            <input type="password" class="form-control" placeholder="Confirm password">
          </div>

          <hr>

          <div class="form-group">

            <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="gender" id="genderMale" value="option1">
            <label class="form-check-label" for="genderMale">Male</label>
            </div>

            <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="gender" id="genderFemale" value="option1">
            <label class="form-check-label" for="genderFemale">Female</label>
            </div>

            <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="gender" id="mentalDisorder" value="option1">
            <label class="form-check-label" for="mentalDisorder">Other</label>
            </div>

          </div>

        </form>



      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary">Sign Up</button>
      </div>
    </div>
  </div>
</div>


